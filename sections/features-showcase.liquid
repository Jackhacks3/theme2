<style>
  .features-showcase {
    padding: 5rem 0;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    position: relative;
    overflow: hidden;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.05);
    -webkit-backdrop-filter: blur(20px);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2rem;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .feature-card:hover {
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 20px 60px rgba(6, 182, 212, 0.1);
  }

  .feature-icon-container {
    position: relative;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .feature-icon {
    font-size: 3rem;
    display: block;
    position: relative;
    z-index: 2;
  }

  .feature-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 80px;
    height: 80px;
    background: radial-gradient(circle, rgba(6, 182, 212, 0.3) 0%, transparent 70%);
    transform: translate(-50%, -50%);
    border-radius: 50%;
    animation: glow 2s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
    to { opacity: 1; transform: translate(-50%, -50%) scale(1.1); }
  }

  .feature-title {
    color: white;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .feature-description {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .feature-demo {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    padding: 1rem;
    margin: 1rem 0;
  }

  .language-selector {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .lang-input {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 0.5rem;
    color: white;
    flex: 1;
  }

  .demo-text {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .source-text, .translated-text {
    padding: 0.5rem;
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.05);
    color: white;
  }

  .feature-stats {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .stat {
    text-align: center;
    flex: 1;
  }

  .stat-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #10b981;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .accuracy-meter {
    margin: 1rem 0;
  }

  .meter-background {
    height: 20px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    position: relative;
    overflow: hidden;
  }

  .meter-fill {
    height: 100%;
    background: linear-gradient(90deg, #10b981, #06b6d4);
    border-radius: 10px;
    transition: width 2s ease;
  }

  .battery-visual {
    display: flex;
    gap: 2rem;
    justify-content: center;
    margin: 1rem 0;
  }

  .earbud-battery, .case-battery {
    text-align: center;
  }

  .battery-icon {
    width: 40px;
    height: 60px;
    border: 2px solid #10b981;
    border-radius: 8px;
    position: relative;
    margin: 0 auto 0.5rem;
    background: rgba(255, 255, 255, 0.1);
  }

  .battery-level {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(180deg, #10b981, #059669);
    border-radius: 0 0 6px 6px;
    transition: height 2s ease;
  }

  .offline-languages {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .lang-item {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.5rem;
    border-radius: 6px;
    text-align: center;
    font-size: 0.9rem;
    color: white;
  }

  .audio-visualizer {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    height: 60px;
    margin: 1rem 0;
  }

  .frequency-bars {
    display: flex;
    gap: 4px;
    align-items: flex-end;
    height: 100%;
  }

  .bar {
    width: 8px;
    background: linear-gradient(180deg, #06b6d4, #10b981);
    border-radius: 4px 4px 0 0;
    animation: audioWave 1.5s ease-in-out infinite;
    animation-delay: calc(var(--i) * 0.1s);
  }

  @keyframes audioWave {
    0%, 100% { transform: scaleY(0.3); }
    50% { transform: scaleY(1); }
  }

  .feature-comparison {
    margin-top: 4rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    -webkit-backdrop-filter: blur(20px);
    backdrop-filter: blur(20px);
  }

  .comparison-grid {
    display: grid;
    gap: 1rem;
    margin-top: 1rem;
  }

  .comparison-item {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    align-items: center;
  }

  .our-product {
    color: #10b981;
    font-weight: 600;
    text-align: center;
  }

  .competitors {
    color: rgba(255, 255, 255, 0.6);
    text-align: center;
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
    
    .comparison-item {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }
</style>

