{% comment %}
  How It Works - Interactive Visual Journey
  Fresh approach with animated demonstrations
{% endcomment %}

<section class="how-it-works-journey" id="howItWorks">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header text-center">
      <h2 class="section-title gradient-text">Experience AI Translation in Action</h2>
      <p class="section-subtitle">Watch how advanced AI transforms conversations in real-time</p>
    </div>

    <!-- Interactive Journey -->
    <div class="journey-container">
      <!-- Step 1: Setup -->
      <div class="journey-step active" data-step="1">
        <div class="step-visual">
          <div class="phone-mockup">
            <div class="screen">
              <div class="app-interface">
                <div class="connecting-animation">
                  <div class="bluetooth-icon">📱</div>
                  <div class="connection-waves"></div>
                  <div class="earbuds-icon">🎧</div>
                </div>
                <p class="status-text">Pairing Complete!</p>
              </div>
            </div>
          </div>
        </div>
        <div class="step-content">
          <h3>Instant Setup</h3>
          <p>Simply open the case and your earbuds automatically pair with your phone. No complex setup required.</p>
          <div class="step-features">
            <span class="feature">✓ Auto-pairing</span>
            <span class="feature">✓ One-tap setup</span>
            <span class="feature">✓ Works with any device</span>
          </div>
        </div>
      </div>

      <!-- Step 2: Conversation -->
      <div class="journey-step" data-step="2">
        <div class="step-visual">
          <div class="conversation-demo">
            <div class="person person-a">
              <div class="speech-bubble source">
                <span class="text">"Where is the nearest restaurant?"</span>
                <div class="sound-waves"></div>
              </div>
              <div class="avatar">👨</div>
            </div>
            
            <div class="translation-process">
              <div class="ai-brain">
                <div class="processing-dots">
                  <span></span><span></span><span></span>
                </div>
                <span class="process-label">AI Processing</span>
              </div>
            </div>

            <div class="person person-b">
              <div class="speech-bubble translated">
                <span class="text">"¿Dónde está el restaurante más cercano?"</span>
                <div class="sound-waves"></div>
              </div>
              <div class="avatar">👩</div>
            </div>
          </div>
        </div>
        <div class="step-content">
          <h3>Natural Conversation</h3>
          <p>Speak naturally and watch as your words are instantly translated with perfect context and tone.</p>
          <div class="step-features">
            <span class="feature">✓ Real-time translation</span>
            <span class="feature">✓ Context awareness</span>
            <span class="feature">✓ Natural tone</span>
          </div>
        </div>
      </div>

      <!-- Step 3: Results -->
      <div class="journey-step" data-step="3">
        <div class="step-visual">
          <div class="results-showcase">
            <div class="language-grid">
              <div class="lang-demo active" data-lang="spanish">
                <span class="flag">🇪🇸</span>
                <span class="text">"Hola, ¿cómo estás?"</span>
              </div>
              <div class="lang-demo" data-lang="french">
                <span class="flag">🇫🇷</span>
                <span class="text">"Bonjour, comment allez-vous?"</span>
              </div>
              <div class="lang-demo" data-lang="japanese">
                <span class="flag">🇯🇵</span>
                <span class="text">"こんにちは、元気ですか？"</span>
              </div>
              <div class="lang-demo" data-lang="arabic">
                <span class="flag">🇸🇦</span>
                <span class="text">"مرحبا، كيف حالك؟"</span>
              </div>
            </div>
            <div class="accuracy-display">
              <div class="accuracy-meter">
                <div class="meter-fill" style="width: 98%"></div>
              </div>
              <span class="accuracy-text">98% Accuracy</span>
            </div>
          </div>
        </div>
        <div class="step-content">
          <h3>Perfect Understanding</h3>
          <p>Experience near-perfect translation accuracy across 163 languages with cultural context preserved.</p>
          <div class="step-features">
            <span class="feature">✓ 98% accuracy</span>
            <span class="feature">✓ Cultural context</span>
            <span class="feature">✓ 163 languages</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Interactive Navigation -->
    <div class="journey-navigation">
      <button class="nav-btn" data-target="1">
        <span class="btn-number">1</span>
        <span class="btn-label">Setup</span>
      </button>
      <button class="nav-btn" data-target="2">
        <span class="btn-number">2</span>
        <span class="btn-label">Speak</span>
      </button>
      <button class="nav-btn" data-target="3">
        <span class="btn-number">3</span>
        <span class="btn-label">Translate</span>
      </button>
    </div>

    <!-- Try It Demo -->
    <div class="demo-section">
      <h3>Try It Yourself</h3>
      <div class="interactive-demo">
        <div class="demo-controls">
          <select class="demo-lang-from">
            <option value="en">English</option>
            <option value="es">Spanish</option>
            <option value="fr">French</option>
          </select>
          <div class="demo-arrow">→</div>
          <select class="demo-lang-to">
            <option value="es">Spanish</option>
            <option value="en">English</option>
            <option value="fr">French</option>
          </select>
        </div>
        <div class="demo-input">
          <input type="text" placeholder="Type something to translate..." class="demo-text-input">
          <button class="demo-translate-btn">Translate</button>
        </div>
        <div class="demo-output">
          <div class="translation-result"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .how-it-works-journey {
    padding: 5rem 0;
    background: linear-gradient(135deg, #0c0c0c 0%, #1a1a2e 50%, #16213e 100%);
    position: relative;
    overflow: hidden;
  }

  .journey-container {
    position: relative;
    max-width: 1200px;
    margin: 4rem auto;
  }

  .journey-step {
    display: none;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    min-height: 500px;
    animation: fadeInUp 0.8s ease;
  }

  .journey-step.active {
    display: grid;
  }

  .step-visual {
    position: relative;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .phone-mockup {
    width: 200px;
    height: 400px;
    background: #1a1a1a;
    border-radius: 30px;
    padding: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .screen {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1e3a8a, #3b82f6);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .connecting-animation {
    display: flex;
    align-items: center;
    gap: 2rem;
    animation: pulse 2s infinite;
  }

  .connection-waves {
    width: 50px;
    height: 20px;
    position: relative;
  }

  .connection-waves::before,
  .connection-waves::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 10px;
    background: #10b981;
    border-radius: 50%;
    animation: wave 1.5s infinite;
  }

  .connection-waves::before {
    left: 0;
    animation-delay: 0s;
  }

  .connection-waves::after {
    right: 0;
    animation-delay: 0.5s;
  }

  .conversation-demo {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .person {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .speech-bubble {
    background: rgba(255, 255, 255, 0.1);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 1rem 1.5rem;
    position: relative;
    max-width: 250px;
  }

  .speech-bubble.source {
    background: linear-gradient(135deg, #3b82f6, #06b6d4);
  }

  .speech-bubble.translated {
    background: linear-gradient(135deg, #10b981, #059669);
  }

  .ai-brain {
    text-align: center;
    color: white;
  }

  .processing-dots {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 0.5rem;
  }

  .processing-dots span {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: dot-pulse 1.4s infinite ease-in-out both;
  }

  .processing-dots span:nth-child(1) { animation-delay: -0.32s; }
  .processing-dots span:nth-child(2) { animation-delay: -0.16s; }

  @keyframes dot-pulse {
    0%, 80%, 100% { transform: scale(0); }
    40% { transform: scale(1); }
  }

  .results-showcase {
    text-align: center;
  }

  .language-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .lang-demo {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .lang-demo:hover,
  .lang-demo.active {
    background: rgba(16, 185, 129, 0.2);
    transform: scale(1.05);
  }

  .step-content h3 {
    color: white;
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .step-content p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .step-features {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .feature {
    color: #10b981;
    font-weight: 500;
  }

  .journey-navigation {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin: 3rem 0;
  }

  .nav-btn {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid transparent;
    border-radius: 15px;
    padding: 1rem 1.5rem;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-btn:hover,
  .nav-btn.active {
    background: rgba(16, 185, 129, 0.2);
    border-color: #10b981;
    transform: translateY(-5px);
  }

  .demo-section {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    padding: 2rem;
    margin-top: 3rem;
    text-align: center;
  }

  .demo-section h3 {
    color: white;
    margin-bottom: 1.5rem;
  }

  .demo-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .demo-lang-from,
  .demo-lang-to {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 0.5rem 1rem;
    color: white;
  }

  .demo-input {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .demo-text-input {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 0.75rem 1rem;
    color: white;
    width: 300px;
  }

  .demo-translate-btn {
    background: linear-gradient(45deg, #10b981, #059669);
    border: none;
    border-radius: 8px;
    padding: 0.75rem 1.5rem;
    color: white;
    cursor: pointer;
    font-weight: 600;
  }

  .translation-result {
    background: rgba(16, 185, 129, 0.1);
    border-radius: 10px;
    padding: 1rem;
    color: white;
    min-height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes wave {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(20px); }
  }

  @media (max-width: 768px) {
    .journey-step {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .conversation-demo {
      scale: 0.8;
    }
    
    .journey-navigation {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const navBtns = document.querySelectorAll('.nav-btn');
  const steps = document.querySelectorAll('.journey-step');
  let currentStep = 1;

  // Auto-advance steps
  function autoAdvance() {
    currentStep = currentStep === 3 ? 1 : currentStep + 1;
    showStep(currentStep);
  }

  function showStep(stepNumber) {
    steps.forEach(step => step.classList.remove('active'));
    navBtns.forEach(btn => btn.classList.remove('active'));
    
    document.querySelector(`[data-step="${stepNumber}"]`).classList.add('active');
    document.querySelector(`[data-target="${stepNumber}"]`).classList.add('active');
  }

  // Manual navigation
  navBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      currentStep = parseInt(btn.dataset.target);
      showStep(currentStep);
    });
  });

  // Auto-advance every 5 seconds
  setInterval(autoAdvance, 5000);

  // Demo functionality
  const demoBtn = document.querySelector('.demo-translate-btn');
  const demoInput = document.querySelector('.demo-text-input');
  const demoResult = document.querySelector('.translation-result');

  if (demoBtn) {
    demoBtn.addEventListener('click', () => {
      const text = demoInput.value;
      if (text) {
        demoResult.innerHTML = '<div class="processing-dots"><span></span><span></span><span></span></div>';
        setTimeout(() => {
          demoResult.textContent = 'Translated: ' + text + ' (Demo translation)';
        }, 1500);
      }
    });
  }
});
</script>

