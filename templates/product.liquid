{% comment %}
  AI Translation Earbuds Product Template
  High-converting layout with tech-focused design
{% endcomment %}

<div class="product-page tech-product">
  {% section 'hero-tech' %}
  {% section 'trust-indicators' %}
  {% section 'features-showcase' %}
  {% section 'how-it-works' %}
  {% section 'use-cases' %}
  {% section 'tech-specs' %}
  {% section 'reviews-section' %}
  {% section 'urgency-bar' %}
  {% section 'faq-section' %}
</div>

{% schema %}
{
  "name": "Product Page",
  "settings": [
    {
      "type": "header",
      "content": "Product Page Settings"
    },
    {
      "type": "checkbox",
      "id": "show_urgency_elements",
      "label": "Show urgency elements",
      "default": true
    },
    {
      "type": "number",
      "id": "stock_threshold",
      "label": "Low stock threshold",
      "default": 25
    }
  ]
}
{% endschema %} 